{% extends 'base.admin.html.twig' %}


{% block body %}
    <p>{{ 'form.movie.formulaire' | trans }}</p>
    {#
        form_start: d√©but du formulaire
        form_end: fin du formulaire
        form_label: label champ
        form_widget: champ
        form_errors: affiche erreurs
    #}
    {{ form_start(form, { 'attr' : {'novalidate' : 'novalidate'} }) }}


    {{ form_errors(form.title) }}
    {{ form_errors(form.poster) }}
    {{ form_errors(form.category) }}
    <p>
        {{ form_label(form.title, 'form.movie.title' | trans | title ~ ' : ') }}
        {{ form_widget(form.title) }}
    </p>
    <p>
        {{ form_label(form.price, 'form.movie.price' | trans | title ~ ' : ') }}
        {{ form_widget(form.price) }}
    </p>
    <p>
        {{ form_label(form.poster, 'form.movie.poster' | trans | title ~ ' : ') }}
        {{ form_widget(form.poster) }}
    </p>
    <p>
        {{ form_label(form.releaseDate, 'form.movie.releaseDate' | trans | title ~ ' : ') }}
        {{ form_widget(form.releaseDate) }}
    </p>
    <p>
        {{ form_label(form.category, 'form.movie.category' | trans | title ~ ' : ') }}
        {{ form_widget(form.category) }}
    </p>
    {#{#<p>
        {{ form_label(form.slug, 'form.movie.slug' | trans | title ~ ' : ') }}
        {{ form_widget(form.slug) }}
    </p>#}
    {% if form.vars.value.id == false %}
        <p><input type="submit" value="{{ 'submit.create' | trans( {}, 'forms') | title}}"/></p>
    {% else %}
        <p><input type="submit" value="{{ 'submit.update' | trans( {}, 'forms') | title}}"/></p>
    {% endif %}
    {{ form_end(form) }}



{% endblock %}